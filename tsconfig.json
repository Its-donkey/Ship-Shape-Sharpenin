{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@shipshape/shared-types/*": ["packages/shared-types/src/*"],
      "@shipshape/validation/*": ["packages/validation/src/*"],
      "@shipshape/validation": ["packages/validation/src/index.ts"]
    }
  },
  "files": [],
  "references": [
    { "path": "./packages/validation" },
    { "path": "./apps/api" },
    { "path": "./apps/web" }
  ]
}
